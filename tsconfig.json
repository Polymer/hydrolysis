{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "isolatedModules": false,
        "noImplicitAny": true,
        // TODO: enable these
        // "strictNullChecks": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "removeComments": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "lib": ["es2017"],
        "outDir": "./lib",
        "declaration": true,
        "sourceMap": true,
        "pretty": true
    },
    "include": [
        "src/**/*.ts"
    ]
}
